resource "aws_iam_instance_profile" "instance_profile" {
  name = "${var.name}-instance-profile"
  role = var.role
  tags = {
    Name        = var.name
    Project     = var.project
    Location    = var.location
    Environment = var.env
    Product     = var.product
  }
  tags_all = {
    Name        = var.name
    Project     = var.project
    Location    = var.location
    Environment = var.env
    Product     = var.product
  }
}